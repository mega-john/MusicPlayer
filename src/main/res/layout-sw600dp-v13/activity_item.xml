<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayoutItem"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:elevation="1dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ImageViewItemIcon"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginLeft="30dp"
        android:src="@drawable/style_albumlist_item" />

    <cn.com.cs2c.musicplayer.MarqueeTextView
        android:id="@+id/MarqueeTextViewItemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="marquee"
        android:fontFamily="sans-serif-condensed"
        android:marqueeRepeatLimit="marquee_forever"
        android:maxWidth="820dp"
        android:singleLine="true"
        android:text="@string/Track_Name"
        android:textColor="#ffffffff"
        android:textSize="28sp" />

    <ImageView
        android:id="@+id/ImageViewItemState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp" />
</LinearLayout>
