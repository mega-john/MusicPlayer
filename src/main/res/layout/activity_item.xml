<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayoutItem"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ImageViewItemIcon"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:src="@drawable/music_list_album" />

    <LinearLayout
        android:id="@+id/LinearLayoutItemInformation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <cn.com.cs2c.musicplayer.MarqueeTextView
            android:id="@+id/MarqueeTextViewItemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:maxWidth="240dp"
            android:singleLine="true"
            android:text="@string/Track_Name"
            android:textColor="#ffffffff"
            android:textSize="28sp" />

        <ImageView
            android:id="@+id/ImageViewItemState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp" />
    </LinearLayout>
</LinearLayout>
